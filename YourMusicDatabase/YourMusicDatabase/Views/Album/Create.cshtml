@model YourMusicDatabase.Models.Album.AlbumModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="~/Album/AlbumCreate" method="post">
    <div class="form-group">
        @Html.LabelFor(m => m.AlbumTitle)
        @Html.EditorFor(m => m.AlbumTitle, null, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AlbumArtist)
        @Html.EditorFor(m => m.AlbumArtist, null, new { @class = "" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AlbumReleaseDate)
        @Html.EditorFor(m => m.AlbumReleaseDate, new { @Value = Model.AlbumReleaseDate.ToString("yyyy/MM/dd"), @class = "datepicker" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AlbumTrackList)
        @Html.EditorFor(m => m.AlbumTrackList, null, new { @class = "" })
    </div>
    <div class="form-group">
        <input type="submit" name="submit"/>
    </div>


</form>
